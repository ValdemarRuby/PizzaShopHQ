<h2>Your Cart</h2>
<p><%= @items %></p>

<table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Qty</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @total_price = 0 %>
        <% @total_qty = 0 %>
        <% @items.each do |item| %>
        <tr>
          <th scope="row">1</th>
          <td><%= item[0].title %></td>
          <td><%= item[1] %></td>
          <td><%= item[0].price %></td>
        </tr>
        <% @total_price += item[0].price * item[1].to_i %>
        <% @total_qty += item[1].to_i %>
        <% end %>

        <tr>
          <td></td>
          <td></td>
          <td><%= @total_qty %></td>
          <td>Total: <%= @total_price %> Rub</td>
        </tr>

      </tbody>
    </table>
