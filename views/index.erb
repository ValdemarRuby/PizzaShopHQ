<div class="row">

  <% @products.each do |p| %>
  <div class="col-md-3">

    <div align="center"><%= p.title %></div>

    <div align="center"><img src="<%= p.path_to_image %>" /></div>

    <div align="center"><%= p.description %></div>

    <div align="center">Price: <%= p.price %> RUB</div>

    <div align="center">Size: <%= p.size %> cm</div>

  </div>

  <% end %>

</div>
